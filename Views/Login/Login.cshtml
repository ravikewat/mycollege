@model MyCollege.Models.LoginUser

@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto" style="margin-left: auto !important;">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>

                    @using (Html.BeginForm())
                    {

                        @Html.ValidationSummary(true,"", new { @class="text-danger"})
                        <div class="row">

                            <div class="form-group col-md-6">

                                @Html.LabelFor(u => u.UserName)

                                @Html.TextBoxFor(u => u.UserName, new { @class = "form-control" })

                                @Html.ValidationMessageFor(u => u.UserName, "", new { @class = "text-danger" })

                            </div>
                           
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">

                                @Html.LabelFor(u => u.Password)

                                @Html.TextBoxFor(u => u.Password, new { @class = "form-control" })


                                @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="form-group col-md-6">
                                <input type="submit" class="btn btn-primary" value="Submit" />
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</div>



